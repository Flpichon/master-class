{
  "name": "conference",
  "plural": "conferences",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "titre": {
      "type": "string",
      "required": true
    },
    "organisateurs": {
      "type": "array",
      "required": false
    },
    "theme": {
      "type": "string",
      "required": "false"
    },
    "date": {
      "type": "date"
    },
    "reseaux": {
      "type": "array",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user"
    },
    "articles": {
      "type": "hasMany",
      "model": "article"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "__get__conferences",
        "find",
        "__get__user",
        "findById",
        "__findById__articles",
        "__get__articles"
      ]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "find",
        "__get__conferences",
        "__create__articles",
        "__get__articles",
        "__findById__articles",
        "__updateById__articles",
        "__destroyById__articles"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": [
        "create"
      ]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {}
}
